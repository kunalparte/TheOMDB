<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        xmlns:card_view="http://schemas.android.com/tools"
                                        android:layout_margin="16dp"
                                        card_view:cardElevation="8dp"
                                        card_view:cardCornerRadius="8dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <TextView style="@style/font_text_18_white"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textStyle="bold"
                  android:id="@+id/movie_name_tv"
                  android:gravity="center_vertical|left"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:layout_marginLeft="8dp"
                  android:layout_alignParentTop="true"/>


        <ImageView android:layout_width="match_parent"
                   android:layout_height="300dp"
                   android:layout_marginTop="8dp"
                   android:layout_marginBottom="8dp"
                   android:id="@+id/movie_image_view"
                   android:src="#000"
                   android:background="@color/colorPrimaryDark"
                   android:layout_below="@+id/movie_name_tv"
                   android:scaleType="fitXY"/>

        <TextView style="@style/font_text_16_white"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/movie_year_tv"
                  android:gravity="center_vertical|right"
                  android:layout_marginRight="8dp"
                  android:paddingTop="8dp"
                  android:paddingBottom="8dp"
                  android:layout_alignParentBottom="true"
                  android:layout_below="@+id/movie_image_view"
                  android:text="test"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>